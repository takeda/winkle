#! /bin/sh
#
# Winkle service
#
# chkconfig: 345 82 16
# description: Winkle service
#
# pidfile: $subs_pid_file
#
### BEGIN INIT INFO
# Provides: winkle
# Default-Stop: 0 1 2 6
# Default-Start: 3 4 5
# Short-Description: Winkle service
# Description: Manages configuration of haproxy
### END INIT INFO

pidfile="$subs_pid_file"
program="$subs_winkle_bin"
options="$subs_options"

prog=winkle
RETVAL=0

start() {
        echo -n $"Starting $prog: "
        env LANG=en_US.UTF-8 $program $options
        RETVAL=$?
        echo
}

stop() {
        if [ -r $pidfile ]; then
                pid=$(cat $pidfile)
                echo -n $"Stopping $prog: "
                kill $pid
                RETVAL=$?
                echo
        else
                echo "No $pidfile found."
                exit 1
        fi
}

status() {
        if [ -r $pidfile ]; then
                pid=$(cat $pidfile)
                if kill -0 $pid; then
                        echo "$prog (pid $pid) is running..."
                        RETVAL=0
                        return $RETVAL
                fi
        fi
        echo "$prog is stopped"
        RETVAL=1
}

case "$1" in
        start)
                start
                ;;
        stop)
                stop
                ;;
        restart)
                stop
                start
                ;;
        status)
                status
                ;;
        *)
                echo "Usage: $0 {start|stop|restart|status}"
                exit 1
esac

exit $RETVAL
